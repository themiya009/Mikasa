<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/bonito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_gravity="center_vertical"
        app:cardCornerRadius="30dp"
        app:cardMaxElevation="20dp"
        android:background="@color/Ivory">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/mikasa"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello !"
                android:textSize="45dp"
                android:textAlignment="center"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="25dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/sunfish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bonito"
        android:layout_margin="30dp"
        android:layout_marginTop="150dp"
        app:cardCornerRadius="30dp"
        app:cardMaxElevation="20dp"
        android:background="@color/lavender"
        android:backgroundTint="@color/lavender">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am Mikasa, I can answer any Question you ask through the famous AI ChatGPT, I am alive becasue of the powerful programing languwage Java"
                android:textColor="@color/Ivory"
                android:textSize="18dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/bramble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sunfish"
        android:orientation="horizontal">

        <Button
            android:id="@+id/chat_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext"
            android:text="Go to chat"
            android:layout_gravity="center"
            android:layout_marginLeft="150dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bramble"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/aboutDev_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext"
            android:text="About Developer"
            android:layout_gravity="center"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="3dp"/>

    </LinearLayout>


</RelativeLayout>